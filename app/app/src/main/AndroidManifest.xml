<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.product.hawker.qiitaappkotlin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ArticleListActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".ArticleActivity" />
        <activity android:name=".WatchActivity" />
        <activity
            android:name=".SensorActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.MoveViewActivity" />
        <activity android:name=".activity.CameraActivity" />
        <activity
            android:name=".activity.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".activity.Maps2Activity"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".SensorGameActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>